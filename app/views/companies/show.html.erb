<div class="container">
  <div class="row py-4">
    <div class="col text-right">
      <%= link_to "Back", companies_path, class: "btn btn-warning" %>
      <%= link_to 'Delete', company_path(@company), method: :delete, data: { confirm: 'Are you sure want to delete the Company?', id: "Delete" }, class: "btn btn-danger" %>
      <%= link_to "Edit", edit_company_path, class: "btn btn-primary" %>
    </div><br/><br/>
  </div>
  <div class="row py">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-header"><h5>Company</h5></div>
        <div class="container">
          <div class="row">
            <div class="col text-right">
            </div>
          </div>
          <div class="bg-success">
            <div class="container p-5 text-white">
              <h1><%= @company.name %></h1>
              <h3><%= get_city_and_state(@company) %></h3></pre>
            </div>
          </div>

          <div class="row bg-light">
            <div class="col-12 col-lg-8 p-lg-5 pt-4">
              <%= @company.description %>
            </div>
            <div class="col-12 col-lg-4 pt-lg-5">
              <h4>Services</h4>
              <% @company.services.reject(&:blank?).each do |service| %>
                <p><%= service %></p>
              <% end %>
              <h4>Contact</h4>
                <div class="form-group" data-controller="clipboard">
                  <p><%= @company.phone %><br>
                  <input type="hidden" value="<%= @company.phone %>" data-target="clipboard.source"></input>
                  <a data-action="clipboard#copy" class="clipboard-button pointer text-decoration-none text-dark"> copy</a>
                  <a data-target="clipboard.notice" class="clipboard-button pointer d-none text-decoration-none text-dark" class="d-none"> copied</a> 
                  </p>         
                </div>
            </div>
          </div>

          <div class="bg-success text-white text-center py-3">
            <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
